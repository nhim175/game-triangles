.slices
  height 100%
  
  .triangle-cell
    display: inline-block
    width: 100%
    margin: 0
    
  &.rows-2
    .triangle-row
      height 50%
      
  &.rows-3
    .triangle-row
      height 33.333333%
      &:last-child
        height 33.333333%
        
  &.rows-4
    .triangle-row
      height 25%
  
  &.cols-2
    .triangle-cell
      width 50%

  .swiper-container
    height 100%
    
  .triangle-slice
    width 100%
    overflow: hidden
    
  canvas
    position relative

[data-page=play]
  .back-btn
    position absolute
    top 25px
    left 15px
    background url(../img/back-btn.png) no-repeat top left
    background-size contain
    width 50px
    height 50px
    z-index 1
    -webkit-transition all 1s
    &.hide
      -webkit-transform translateY(-200px)
  
  .time
    position: fixed
    top: 0
    width: 100%
    height: 10px
    background-color: white
    opacity: 0.5
    z-index: 10

.game-over
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  z-index 2
  font-family 'Moon Flower', sans-serif
  text-align center
  background-color rgba(0,0,0,0.2)
  display none
  -webkit-transition all 0.5s
  h1
    position absolute
    top 50%
    margin 0
    margin-top -117px
    width 100%
    text-align center
    font-size 57px
    font-weight bold
    -webkit-transition all 0.3s
    -webkit-transform translateY(-500px)
    -webkit-transition-delay 0.3s
  h2
    position absolute
    top 50%
    margin 0
    margin-top -43px
    width 100%
    text-align center
    font-size 32px
    -webkit-transition all 0.3s
    -webkit-transform translateY(-500px)
    -webkit-transition-delay 0.1s
  
  .buttons
    position: absolute
    width: 100%
    height: 50%
    bottom: 0
    padding-top: 10px
    box-sizing: border-box

  .btn
    display inline-block
    text-align center
    font-size 36px
    font-weight bold
    width 190px
    border 2px solid #000
    border-radius 10px
    line-height 40px
    -webkit-transition all 0.2s
    margin-top 10px
    
  .next-btn
    color black
    border-color #000
    -webkit-transition-delay 0.1s
    -webkit-transform translateY(500px)
    
  .play-again-btn
    -webkit-transition-delay 0.2s
    -webkit-transform translateY(500px)
    
  .share-btn
    color #FFFFFF
    border-color #FFFFFF
    -webkit-transition-delay 0.2s
    -webkit-transform translateY(500px)
    
  .quit-btn
    color #840000
    border-color #840000
    -webkit-transition-delay 0.3s
    -webkit-transform translateY(500px)
    
  &.show
    display block
    
  &.zoom-out
    -webkit-transform scale(2)
    opacity 0

.game-over.win 
  .next-btn
  .share-btn
  .quit-btn
  h1
  h2
    -webkit-transform translateY(0px)
    
  .play-again-btn
    display: none
    
.game-over.lose
  h1
  h2
  .play-again-btn
  .quit-btn
    -webkit-transform translateY(0px)
  
  .next-btn
  .share-btn
    display: none
  


